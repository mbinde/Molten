<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>UIBackgroundModes</key>
	<array>
		<string>remote-notification</string>
	</array>
	<key>LSSupportsOpeningDocumentsInPlace</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>

	<!-- Document Types: Allows Molten to open .molten files -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeName</key>
			<string>Molten Import</string>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>LSHandlerRank</key>
			<string>Owner</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>app.moltenglass.plan</string>
			</array>
		</dict>
	</array>

	<!-- Exported Type Declarations: Defines the .molten file type -->
	<key>UTExportedTypeDeclarations</key>
	<array>
		<dict>
			<key>UTTypeIdentifier</key>
			<string>app.moltenglass.plan</string>
			<key>UTTypeDescription</key>
			<string>Molten Import</string>
			<key>UTTypeConformsTo</key>
			<array>
				<string>public.data</string>
				<string>public.archive</string>
			</array>
			<key>UTTypeTagSpecification</key>
			<dict>
				<key>public.filename-extension</key>
				<array>
					<string>molten</string>
				</array>
				<key>public.mime-type</key>
				<string>application/x-molten-import</string>
			</dict>
		</dict>
	</array>

	<!-- URL Scheme: Allows molten:// deep links from QR codes -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>com.MotleyWoods.Molten</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>molten</string>
			</array>
		</dict>
	</array>
</dict>
</plist>
